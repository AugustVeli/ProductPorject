@model List<WebApp.Models.Product>

@{
    ViewData["Title"] = "List of Products"; 
}
<div>
    <div><a asp-action="Create">Add Product</a></div>
    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Title</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Code</td>
                <td>@product.Title</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
           
        }
        </tbody>
    </table>
</div>